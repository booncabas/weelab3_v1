<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:theme="@style/Theme.Weelab3.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/section_update"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:paddingStart="5dp"
        android:paddingBottom="0dp"
        android:weightSum="4"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/layout_intent_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/weelab_icon"
                    />
                <TextView
                    android:id="@+id/appwidget_update_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#d2d2d2"
                    android:text="@string/widget_update_label"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/appwidget_last_update_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="#d2d2d2"
                    android:text="@string/ellipsis"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <ImageView
                        android:id="@+id/appwidget_img_alarm_count"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/bell_gray"/>
                    <TextView
                        android:id="@+id/appwidget_tv_alarms_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:textColor="#d2d2d2"
                        android:text="@string/ellipsis"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_refresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingTop="4dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/button_update"
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:visibility="gone"
                        android:layout_height="22dp"
                        android:paddingEnd="5dp"
                        android:src="@drawable/baseline_sync_24"
                        tools:ignore="RtlSymmetry" />
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:indeterminate="true"
                        android:visibility="visible"
                        android:paddingEnd="5dp"
                        android:gravity="end"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_days"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/section_update"
        android:weightSum="15"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            >
            <TextView
                android:id="@+id/day_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/day_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp"/>
            <TextView
                android:id="@+id/day_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp"/>
            <TextView
                android:id="@+id/day_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp"/>
            <TextView
                android:id="@+id/day_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp"/>
            <TextView
                android:id="@+id/day_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp"/>
            <TextView
                android:id="@+id/day_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#808080"
                android:text=""
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                tools:ignore="SmallSp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_below="@+id/section_days"
        android:orientation="vertical">

        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

</RelativeLayout>