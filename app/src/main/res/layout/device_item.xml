<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:weightSum="21"
        android:background="@android:color/transparent"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="11">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="3dp"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:text=""
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:textColor="#d2d2d2"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/img_alarm"
                    android:scaleType="fitXY"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/image" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:weightSum="3"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_maintenance"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/under_maintenance"
                        android:gravity="center_vertical"
                        android:textColor="#fe9500"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_no_maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:weightSum="3"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/img_thermo"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_thermo"/>
                            <TextView
                                android:id="@+id/tv_temperature"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="2dp"
                                android:paddingEnd="3dp"
                                android:text=""
                                android:gravity="top"
                                android:maxLines="1"
                                android:includeFontPadding="false"
                                android:ellipsize="marquee"
                                android:textColor="#e48d11"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/img_humi"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/ic_baseline_water_drop_24"/>
                            <TextView
                                android:id="@+id/tv_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:maxLines="1"
                                android:includeFontPadding="false"
                                android:ellipsize="marquee"
                                android:gravity="bottom"
                                android:textColor="#2fa2d5"
                                android:textStyle="bold"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--<RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_alarm"
                android:scaleType="fitXY"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@string/image" />

        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">
            <ImageView
                android:id="@+id/img_chart"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>


